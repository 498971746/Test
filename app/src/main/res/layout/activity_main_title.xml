<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height">

    <ImageButton
        style="@style/image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/smoba_battle_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/activity_main_title_tab"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="@dimen/title_margin"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/activity_main_title_tab"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabGravity="center"
        app:tabIndicatorColor="@color/tab_item_text_normal"
        app:tabIndicatorHeight="0dp"
        app:tabSelectedTextColor="@color/tab_item_text_select"
        app:tabTextAppearance="@style/TextAppearance.AppCompat">

        <android.support.design.widget.TabItem
            android:id="@+id/activity_main_title_tab_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_item_friend"/>

        <android.support.design.widget.TabItem
            android:id="@+id/activity_main_title_tab_square"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_item_square"/>

    </android.support.design.widget.TabLayout>


    <ImageButton
        style="@style/image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/more_menu_img_smoba"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/activity_main_title_tab"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/title_margin"/>
</android.support.constraint.ConstraintLayout>