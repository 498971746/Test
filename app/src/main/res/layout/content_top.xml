<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/content_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/content_top_height">

        <ImageView
            android:id="@+id/content_top_user_background_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/content_top_image_height"
            android:scaleType="centerCrop"
            android:src="@drawable/top_image"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/content_top_account_margin_bottom"
            android:layout_marginRight="@dimen/content_top_account_margin_right"
            android:background="@null"
            android:orientation="vertical">

            <TextView
                android:layout_gravity="end"
                android:id="@+id/content_top_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/account"
                android:textSize="@dimen/content_top_account_text"/>

            <LinearLayout
                android:id="@+id/content_top_content_top_describe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/content_top_user_game_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_game_name"/>

                <TextView
                    android:id="@+id/content_top_user_game_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/user_game_area_margin"
                    android:layout_marginStart="@dimen/user_game_area_margin"
                    android:text="@string/user_game_area"/>

                <TextView
                    android:id="@+id/content_top_user_game_segment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_game_segment"/>
            </LinearLayout>
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/content_top_user_image"
            android:layout_width="@dimen/content_top_circle_image"
            android:layout_height="@dimen/content_top_circle_image"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="@dimen/content_top_circle_image_margin"
            android:src="@drawable/head_image"
            app:civ_border_color="@color/circle_image_view_border_color"
            app:civ_border_width="@dimen/circle_image_view_border_width"/>
    </FrameLayout>
</LinearLayout>


